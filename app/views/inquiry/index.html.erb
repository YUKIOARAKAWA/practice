<h1>お問い合わせ</h1>
<div id = message>
  <% if @inquiry.errors.any? %>
    <h3>入力内容に不備があります。</h3>
    <div class = "text-danger">
    <% @inquiry.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </div>
    <br>
  <% end %>
</div>


<%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
  <table class="table">

    <tr>
      <th>名前<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :mail %></td>
    </tr>

    <tr>
      <th>お問い合わせ内容</th>
      <td><%= f.text_area :content %></td>
    </tr>

  </table>
  <%= f.submit '確認', class: 'btn btn-primary' %>
<% end %>

<%= link_to "トップページヘ", root_path %>

