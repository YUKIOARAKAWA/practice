<div class="page-header">
  <h1>以下の内容でよろしいですか。</h1>
</div>

<%= form_for @inquiry, url: inquiry_path ,method: :post do |f| %>
  <table class="table">

    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </td>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :mail %>
        <%= @inquiry.mail %>
      </td>
    </tr>

    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :content %>
        <%= simple_format(@inquiry.content) %>
      </td>
    </tr>

  </table>

  <%= f.submit '送信', :class => 'btn btn-primary' %>
  <%= f.submit 'back', :class => 'btn btn-primary' ,name: 'back' %>
<% end %>